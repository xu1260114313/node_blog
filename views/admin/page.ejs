<nav>
    <ul class="pager">
         <% if(page !== 1){ %>
                <li class="previous">
                    <a href="?page=<%= page - 1 %>">&larr; 上一页</a>
                </li>
        <% } %>
        <% if(page < pages){ %>
                <li class="next">
                    <a href="?page=<%= page + 1 %>">下一页 &rarr;</a>
                </li>
        <% } %>
    </ul>
</nav>